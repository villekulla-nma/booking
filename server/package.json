{
  "name": "@booking/server",
  "version": "0.7.0",
  "author": "Emanuel Kluge (https://emanuel-kluge.de/)",
  "license": "MIT",
  "scripts": {
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:migrate": "npx sequelize-cli db:migrate",
    "predev": "rm -f ./db_dev.sqlite && npm run db:migrate && npm run db:seed",
    "dev": "nodemon",
    "lint": "eslint .",
    "test:watch": "jest --watch",
    "test": "jest",
    "build": "ncc build src/index.ts -o ../dist/api --target es2020",
    "gen-salt": "node -e \"console.log(require('bcryptjs').genSaltSync())\"",
    "create-id": "node -e \"console.log(require('shortid').generate())\""
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__tests__/helpers/"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "8.1.3",
    "bcryptjs": "2.4.3",
    "dotenv": "16.4.5",
    "fastify": "4.26.2",
    "fluent-json-schema": "4.2.1",
    "jsonwebtoken": "9.0.2",
    "randomcolor": "0.6.2",
    "sequelize": "6.37.2",
    "shortid": "2.2.16",
    "sqlite3": "5.1.7"
  },
  "devDependencies": {
    "@booking/types": "0.7.0",
    "@types/bcryptjs": "2.4.6",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "18.19.39",
    "@types/node-fetch": "2.6.11",
    "@types/randomcolor": "0.5.9",
    "@types/shortid": "0.0.32",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "9.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "jest-environment-node": "29.7.0",
    "node-fetch": "2.7.0",
    "nodemon": "3.1.4",
    "sequelize-cli": "6.6.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.5.3"
  }
}
